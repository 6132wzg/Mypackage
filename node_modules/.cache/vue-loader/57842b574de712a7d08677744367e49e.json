ed() {},\n\n  methods: {\n    handleOpenEdit() {\n      this.isEdit = true\n    },\n    handleCancel() {\n      this.isEdit = false\n      console.log('handleCancel')\n    },\n    handleConfirm(value) {\n      this.isEdit = false\n      this.$emit('confirm', this.sValue)\n      this.sValue = ''\n      console.log('handleConfirm', this.sValue)\n    }\n  }\n}\n",{"version":3,"sources":["info-edit.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AA2EA;AACA;;AAEA;;AAEA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;;AAEA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"info-edit.vue","sourceRoot":"src/views/biz-components/info-edit","sourcesContent":["<template>\n  <div class=\"info-edit\" :class=\"{ isEdit: isEdit }\">\n    <div class=\"info-edit-label\" :style=\"'min-width:' + labelWidth + 'px'\">\n      {{ label }}\n    </div>\n    <div class=\"info-edit-wrapper\">\n      <div class=\"content\" v-if=\"!isEdit\">\n        <slot />\n      </div>\n      <div class=\"content\" v-else>\n        <template v-if=\"type === 'input'\">\n          <a-input\n            placeholder=\"请输入\"\n            maxlength=\"30\"\n            v-model=\"sValue\"\n            slot=\"edit\"\n            style=\"minWidth: 80px\"\n          ></a-input>\n        </template>\n        <template v-else-if=\"type === 'textarea'\">\n          <st-textarea\n            maxlength=\"300\"\n            v-model=\"sValue\"\n            :autosize=\"{ minRows: 1, maxRows: 3 }\"\n            slot=\"edit\"\n            placeholder=\"请输入\"\n          ></st-textarea>\n        </template>\n        <template v-else-if=\"type === 'select'\">\n          <a-select\n            v-model=\"sValue\"\n            placeholder=\"请选择\"\n            slot=\"edit\"\n            style=\"minWidth: 110px\"\n          >\n            <a-select-option :value=\"-1\">无</a-select-option>\n            <a-select-option\n              v-for=\"item in options\"\n              :value=\"item.id\"\n              :key=\"item.id\"\n            >\n              {{ item.name }}\n            </a-select-option>\n          </a-select>\n        </template>\n        <div class=\"buttons\">\n          <st-button\n            class=\"input-edit-button\"\n            type=\"link\"\n            @click=\"handleConfirm\"\n          >\n            确定\n          </st-button>\n          <st-button\n            class=\"input-edit-button\"\n            type=\"link\"\n            @click=\"handleCancel\"\n          >\n            取消\n          </st-button>\n        </div>\n      </div>\n      <!-- 非编辑状态,且全局没有处于编辑状态 -->\n      <div\n        class=\"edit\"\n        @click=\"handleOpenEdit\"\n        v-if=\"canEdit && ((!isEdit && !invisibleEdit) || isEdit)\"\n      >\n        <st-icon type=\"edit\"></st-icon>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: '',\n\n  bem: {},\n\n  components: {},\n\n  props: {\n    value: {\n      type: [String, Number],\n      default: ''\n    },\n    options: {\n      type: Array,\n      default: () => []\n    },\n    label: {\n      type: String,\n      required: true,\n      default: ''\n    },\n    labelWidth: {\n      type: String,\n      default: '70'\n    },\n    type: {\n      type: String,\n      default: 'input'\n    },\n    invisibleEdit: {\n      type: Boolean,\n      default: false\n    },\n    canEdit: {\n      type: Boolean,\n      deafult: true\n    }\n  },\n\n  data() {\n    return {\n      isEdit: false,\n      sValue: ''\n    }\n  },\n\n  watch: {\n    isEdit(v) {\n      this.$emit('changeEditStatus', v)\n    },\n    value: {\n      handler(v) {\n        this.sValue = v\n      },\n      immediate: true\n    }\n  },\n\n  async: {},\n\n  mounted() {},\n\n  methods: {\n    handleOpenEdit() {\n      this.isEdit = true\n    },\n    handleCancel() {\n      this.isEdit = false\n      console.log('handleCancel')\n    },\n    handleConfirm(value) {\n      this.isEdit = false\n      this.$emit('confirm', this.sValue)\n      this.sValue = ''\n      console.log('handleConfirm', this.sValue)\n    }\n  }\n}\n</script>\n\n<style lang=\"less\" scoped></style>\n"]}]}